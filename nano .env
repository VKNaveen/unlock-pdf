IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=youremail@example.com
IMAP_PASS=your_imap_or_app_password
IMAP_TLS=true

POLL_INTERVAL_SECONDS=30          # how often to check mailbox
SUBJECT_KEYWORD=XYZ               # subject keyword to match; case-insensitive substring
ATTACHMENTS_FOLDER=/path/to/save # absolute path where attachments and decrypted files will be saved

# PDF decrypt config
PDF_SENDER_EMAIL=sender@example.com   # the email address that sends password-protected PDFs (optional)
PDF_PASSWORD=thepdfpassword           # password used to unlock PDFs from PDF_SENDER_EMAIL
# If you want multiple senders/passwords implement sender->password map (see notes)
